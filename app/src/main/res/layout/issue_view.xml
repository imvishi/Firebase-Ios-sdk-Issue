<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/issues_view_drawable"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/issue_list_margin"
        android:paddingStart="@dimen/issue_list_padding"
        android:paddingLeft="@dimen/issue_list_padding"
        android:text="Title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/issue_list_padding"
        android:layout_marginRight="@dimen/issue_list_padding"
        android:background="@color/colorDivider" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/issue_list_margin"
        android:paddingStart="@dimen/issue_list_padding"
        android:paddingLeft="@dimen/issue_list_padding"
        android:text="Description" />

</LinearLayout>